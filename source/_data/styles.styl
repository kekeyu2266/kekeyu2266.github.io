.brand {
    color: #34495e;
}

.site-meta {
    background: #f1c40f;
}

.site-subtitle {
    color: #34495e;
}

b,
strong {
    font-weight: bolder;
    overflow-wrap: break-word;
    word-wrap: break-word;
    padding: 0.1rem 0.2rem;
    border-radius: 0.2rem;
    opacity: 0.9;
    margin: 0 0.1rem;
    background: linear-gradient(to bottom, #fdf5db, #fae7e2);
    color: #222;
}

code {
    /* font-weight: bolder; */
    font-family: Optima-Regular, PingFangTC-light;
    overflow-wrap: break-word;
    word-wrap: break-word;
    padding: 0.1rem 0.2rem 0.2rem;
    border-radius: 0.2rem;
    opacity: 0.9;
    margin: 0 0.3rem;
    background: linear-gradient(to right, #cff0ff, #afcafd);
    color: #000;
}

.post-body p {
    font-family: Optima-Regular, PingFangTC-light;
    padding-top: 8px;
    padding-bottom: 8px;
    margin: 10px;
    line-height: 2.2;
    letter-spacing: 1px;
    font-size: 16px;
    word-spacing: 0.1em;
    color: #222222;
    text-align: justify;
    word-wrap: break-word;
    word-break: break-word;
    -webkit-hyphens: auto;
    hyphens: auto;
}

.post-body ul,
.post-body ol {
    font-family: Optima-Regular, PingFangTC-light;
    padding-top: 8px;
    padding-bottom: 8px;
    margin: 10px;
    line-height: 2.2;
    letter-spacing: 1px;
    font-size: 16px;
    word-spacing: 0.1em;
    color: #222222;
    text-align: justify;
    word-wrap: break-word;
    word-break: break-word;
    -webkit-hyphens: auto;
    hyphens: auto;
}

h2 {
    border-left: 20px #f1c40f solid;
    line-height: 1.8;
    padding-left: 12px;
}

.post-body h3 {
    font-family: Optima-Regular, PingFangTC-light;
    margin: 10px 0;
    padding: 6px 12px;
    border-left: 8px #f85959 solid;
    font-size: 20px;
    font-weight: bold;
    line-height: 1.8;
    color: #222222;
}

.post-body h4 {
    font-family: Optima-Regular, PingFangTC-light;
    margin: 10px 0;
    padding: 6px 12px;
    border-left: 4px #f85959 solid;
    font-size: 18px;
    font-weight: bold;
    line-height: 1.6;
    color: #222222;
}

.post-body h5 {
    font-family: Optima-Regular, PingFangTC-light;
    font-size: 16px;
    color: rgb(165, 213, 93);
}